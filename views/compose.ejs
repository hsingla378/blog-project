<%- include("partials/header") -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input style="font-weight: 600;" id="postTitle" class="form-control input-md" type="text" name="postTitle">
    </div>

    <div class="form-group">
        <label for="postBody">Content</label>
        <textarea id="postBody" class="form-control" name="postBody" cols="" rows="10"></textarea>
    </div>

    <br>
    <button class="btn btn-primary btn-md" type="submit" name="submit">Publish</button>
</form>

<%- include("partials/footer") -%>